# EstimAI Environment Configuration
# Copy this file to .env and configure for your environment

# Required: Backend artifact storage directory (absolute path)
ARTIFACT_DIR=/ABSOLUTE/PATH/TO/estimai/backend/artifacts

# Required: JWT authentication secret (use a strong secret in production)
JWT_SECRET=your-secure-jwt-secret-here

# Required: Frontend API configuration
VITE_API_BASE=http://localhost:8000/api
VITE_FILE_BASE=http://localhost:8000

# Optional: CORS configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Optional: Logging level
LOG_LEVEL=INFO

# Optional: JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Optional: Upload guardrails
ALLOWED_EXTS=.pdf,.docx,.xlsx,.csv,.png,.jpg,.jpeg,.tif,.tiff
MAX_UPLOAD_SIZE_MB=25

# Optional: OCR configuration (requires Tesseract installed)
OCR_ENABLED=false
OCR_LANG=eng

# Optional: Costbook and markup settings
COSTBOOK_PATH=
OVERHEAD_PCT=10.0
PROFIT_PCT=5.0
